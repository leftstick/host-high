{
  "name": "hosts",
  "version": "3.0.0",
  "description": "Manage hosts easily",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"NODE_ENV=dev electron .\" \"BROWSER=none umi dev\"",
    "build": "umi build && electron-builder --mac"
  },
  "build": {
    "productName": "Hosts Master",
    "appId": "org.howard.apps",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "output/",
      "system/",
      "main.js"
    ]
  },
  "author": "Howard.Zuo",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --max-warnings=0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "concurrently": "^5.0.2",
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "eslint-config-umi": "^1.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "redbox-react": "^1.6.0",
    "umi": "^2.12.8",
    "umi-plugin-react": "^1.14.11",
    "umi-types": "^0.5.10"
  },
  "dependencies": {
    "@umijs/hooks": "^1.5.2",
    "classnames": "^2.2.6",
    "hostile": "^1.3.2",
    "hox": "^1.0.0",
    "sudo-prompt": "^9.1.1"
  }
}
