{
  "name": "hosts",
  "version": "3.1.1",
  "description": "Manage hosts easily",
  "main": "src/main/index.js",
  "scripts": {
    "start": "concurrently \"NODE_ENV=dev electron .\" \"APP_ROOT=src/renderer umi dev\"",
    "build": "rm -rf dist && APP_ROOT=src/renderer umi build && electron-builder --mac"
  },
  "build": {
    "productName": "Hosts Master",
    "appId": "org.howard.apps",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "build/",
      "output/",
      "src/main"
    ]
  },
  "author": "Howard.Zuo",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --max-warnings=0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/classnames": "^2.2.10",
    "@types/hostile": "^1.3.0",
    "@types/node": "^14.0.19",
    "concurrently": "^5.2.0",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "react-coding-style": "^1.1.0"
  },
  "dependencies": {
    "@umijs/hooks": "^1.9.3",
    "@umijs/plugin-antd": "^0.7.0",
    "@umijs/plugin-model": "^2.5.1",
    "classnames": "^2.2.6",
    "hostile": "^1.3.2",
    "sudo-prompt": "^9.2.1",
    "umi": "^3.2.8"
  }
}
