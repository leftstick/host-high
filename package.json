{
  "name": "hosts",
  "version": "3.0.2",
  "description": "Manage hosts easily",
  "main": "src/main/index.js",
  "scripts": {
    "start": "concurrently \"NODE_ENV=dev electron .\" \"APP_ROOT=src/renderer umi dev\"",
    "build": "APP_ROOT=src/renderer umi build && electron-builder --mac"
  },
  "build": {
    "productName": "Hosts Master",
    "appId": "org.howard.apps",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "build/",
      "output/",
      "src/main"
    ]
  },
  "author": "Howard.Zuo",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --max-warnings=0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.1.0",
    "electron": "^8.1.0",
    "electron-builder": "^22.4.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react-coding-style": "^1.0.0"
  },
  "dependencies": {
    "@umijs/hooks": "^1.7.0",
    "@umijs/plugin-antd": "^0.3.0",
    "@umijs/plugin-model": "^2.1.1",
    "classnames": "^2.2.6",
    "hostile": "^1.3.2",
    "sudo-prompt": "^9.1.1",
    "umi": "^3.0.3"
  }
}
