{
  "name": "hosts",
  "version": "3.0.2",
  "description": "Manage hosts easily",
  "main": "src/main/index.js",
  "scripts": {
    "start": "concurrently \"NODE_ENV=dev electron .\" \"APP_ROOT=src/renderer BROWSER=none umi dev\"",
    "build": "APP_ROOT=src/renderer umi build && electron-builder --mac"
  },
  "build": {
    "productName": "Hosts Master",
    "appId": "org.howard.apps",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "build/",
      "output/",
      "src/main"
    ]
  },
  "author": "Howard.Zuo",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --max-warnings=0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "concurrently": "^5.0.2",
    "electron": "^7.1.9",
    "electron-builder": "^21.2.0",
    "eslint-config-umi": "^1.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "redbox-react": "^1.6.0",
    "umi": "^2.13.0",
    "umi-plugin-react": "^1.15.0",
    "umi-types": "^0.5.11"
  },
  "dependencies": {
    "@umijs/hooks": "^1.5.3",
    "classnames": "^2.2.6",
    "hostile": "^1.3.2",
    "hox": "^1.0.1",
    "sudo-prompt": "^9.1.1"
  }
}
